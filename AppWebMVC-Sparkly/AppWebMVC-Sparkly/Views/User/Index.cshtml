 @model IEnumerable<User>

  <h2 >Usuarios</h2>

 
 
    <a href="@Url.Action("Register", "User")" class="btn btn-primary btn-lg">
        <i class="fas fa-user-plus"></i> Crear Usuario
    </a>
 

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>Nombre</th>
            <th>Email</th>
            <th class="text-center">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Nombre</td>
                <td>@user.Email</td>
                <td class="text-center">
                    <!-- Botón de Modificar -->
                    <a href="@Url.Action("Edit", "User", new { id = user.Id })" class="btn btn-info btn-sm">
                        <i class="fas fa-edit"></i> Modificar
                    </a>
                    
                    <!-- Botón de Eliminar -->
                    <a href="@Url.Action("Delete", "User", new { id = user.Id })" class="btn btn-danger btn-sm">
                        <i class="fas fa-trash-alt"></i> Eliminar
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<style>
    
    .table {
        margin-top: 20px;
        border-radius: 0.5rem;
        overflow: hidden;
    }

    .table thead {
        background-color: #343a40; /* Color del encabezado */
        color: white; /* Color del texto del encabezado */
    }

    .btn-primary {
        background-color: #8400ff;  
        border: none; /* Sin borde */
    }

    .btn-info {
        background-color: #17a2b8;  
        border: none; /* Sin borde */
    }

    .btn-danger {
        background-color: #dc3545;  
        border: none; /* Sin borde */
    }

    .btn {
        transition: background-color 0.3s; 
    }

    .btn:hover {
        filter: brightness(85%);  
    }
</style>

